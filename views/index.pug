doctype html
html
  head
    title UPC Lookup
  body
    h1 Enter a UPC
    form(action="/lookup" method="POST")
      input(type="text" name="upc" value="00123456789012" required)
      button(type="submit") Lookup
    
    if groceryItems
      each item in groceryItems
        div #{item}
    
    form(action="/generate-recipe" method="POST")
      button(type="submit") Generate Recipe
    
    if recipe
      div #{recipe}